extends /pug/utils/_layout.pug

append vars
  -
    var title = 'Random Color Generator'
    var styles = [
      require('/styles/_reset.scss'),
      require('./styles/styles.scss'),
    ]
    var scripts = ['/subprojects/websites/RandomColorGenerator/scripts/script.js',]

    link.icon = require('/assets/images/PSIcon32.png')

    var refreshIcon = '&#xe5d5;'        // refresh
    var lockIcon = 'lock'               // lock [&#xe897;] (Incorrect symbol display)
    var lockOpenRightIcon = '&#xf656;'  // lock_open_right
    var contentCopyIcon = '&#xe14d;'    // content_copy

block headEnd
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/chroma-js/2.4.2/chroma.min.js" integrity="sha512-zInFF17qBFVvvvFpIfeBzo7Tj7+rQxLeTJDmbxjBz5/zIr89YVbTNelNhdTT+/DCrxoVzBeUPVFJsczKbB7sew==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

block content
  .wrapper
    header.header
      .header__container
        h1.header__title= title
        button.header__btn.button
          span.button__body.button__body_update.material-symbols-outlined !{refreshIcon}

    main.main
      .main__container
        - for (let i = 0; i < 6; ++i)
          .main__item
            .card
              .card__body
                .card__btn-body
                  button.card__btn.button
                    span.button__body.button__body_card.material-symbols-outlined(data-type="unlock") !{lockOpenRightIcon}
                .card__copy-body
                  .card__copy-text(data-type="text-copy") #c41174a6
                  .card__copy-btn
                    button.button
                      span.button__body.button__body_copy.material-symbols-outlined(data-type="copy") !{contentCopyIcon}
